<Window x:Class="MVVM.AddEmp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="AddEmp" Height="373.266" Width="282.37">
    <Grid>
        <TextBox x:Name="EmpName" HorizontalAlignment="Left" Height="40" Margin="35,65,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="EmpComp" HorizontalAlignment="Left" Height="40" Margin="35,116,0,0" TextWrapping="Wrap" Text="{Binding Company}" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="EmpCash" HorizontalAlignment="Left" Height="40" Margin="35,167,0,0" TextWrapping="Wrap" Text="{Binding Cash}" VerticalAlignment="Top" Width="200"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="77,241,0,0" VerticalAlignment="Top" Width="128" Height="58" Click="Button_Click"/>

    </Grid>
</Window>
